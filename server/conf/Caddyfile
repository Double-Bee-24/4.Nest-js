:80 {
    # Handle API and Swagger routes first
    handle /api/* {
        reverse_proxy swapi_app:4000
    }
    
    handle /swagger/* {
        reverse_proxy swapi_app:4000
    }
    
    # Handle static files and SPA routing
    handle {
        root * /static/client
        try_files {path} /index.html
        file_server
    }
}